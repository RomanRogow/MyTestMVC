<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <changeSet id="002-add-audit-columns" author="system">
        <!-- Проверяем, что колонок еще нет -->
        <preConditions onFail="MARK_RAN">
            <not>
                <columnExists tableName="employees" columnName="created_at"/>
            </not>
        </preConditions>

        <addColumn tableName="employees">
            <column name="created_at" type="TIMESTAMP">
                <constraints nullable="true"/>
            </column>
        </addColumn>

        <comment>Добавляем колонки для аудита created_at и updated_at</comment>
    </changeSet>

    <changeSet id="003-add-updated-at-column" author="system">
        <preConditions onFail="MARK_RAN">
            <not>
                <columnExists tableName="employees" columnName="updated_at"/>
            </not>
        </preConditions>

        <addColumn tableName="employees">
            <column name="updated_at" type="TIMESTAMP">
                <constraints nullable="true"/>
            </column>
        </addColumn>

        <comment>Добавляем колонку updated_at</comment>
    </changeSet>

</databaseChangeLog>